@page
@model exchaRazor02.Pages.DiariesModel

<table class="table table-striped table-hover mytbl">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Diaries[0].Id)</th>
            <th width="5%">@Html.DisplayNameFor(model => model.Diaries[0].pass)</th>
            <th>@Html.DisplayNameFor(model => model.Diaries[0].note)</th>
            <th>@Html.DisplayNameFor(model => model.Diaries[0].last)</th>
            <th>@Html.DisplayNameFor(model => model.Diaries[0].pub)</th>
            <th>@Html.DisplayNameFor(model => model.Diaries[0].excha)</th>
            <th>@Html.DisplayNameFor(model => model.Diaries[0].writa)</th>
            <th>@Html.DisplayNameFor(model => model.Diaries[0].retTime)</th>
            <th>@Html.DisplayNameFor(model => model.Diaries[0].exid)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Diaries)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td class="hideOverWidth">@Html.DisplayFor(modelItem => item.pass)</td>
                <td>@Html.DisplayFor(modelItem => item.note)</td>
                <td>@Html.DisplayFor(modelItem => item.last)</td>
                <td>@Html.DisplayFor(modelItem => item.pub)</td>
                <td>@Html.DisplayFor(modelItem => item.excha)</td>
                <td>@Html.DisplayFor(modelItem => item.writa)</td>
                <td>@Html.DisplayFor(modelItem => item.retTime)</td>
                <td>@Html.DisplayFor(modelItem => item.exid)</td>
                <td>
                    <a href="/Leaves/Index?id=@item.Id">開く</a>
                </td>
            </tr>
        }
    </tbody>
</table>
